<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/tvImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/arrow_both_1"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/tvImage"
        android:layout_marginBottom="70dp"
        android:gravity="center"
        android:drawableTop="@android:drawable/btn_star_big_on"
        android:text="star"/>
    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:drawableTop="@android:drawable/presence_audio_online"
        android:text="mice"
        android:gravity="center|bottom"
        android:layout_toLeftOf="@id/textView"
        android:layout_above="@+id/tvA"
        android:layout_marginBottom="45dp" />


    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toEndOf="@id/textView"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/textView"
        android:layout_above="@id/tvB"
        android:layout_marginBottom="45dp"
        android:drawableTop="@android:drawable/presence_video_online"
        android:gravity="center|bottom"
        android:text="Video" />

    <TextView
        android:id="@+id/tvA"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_marginEnd="-17dp"
        android:layout_toStartOf="@+id/tvImage"
        android:background="@android:color/holo_orange_dark"
        android:elevation="-12dp"
        android:gravity="center"
        android:text="A" />

    <TextView
        android:id="@+id/tvB"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="-17dp"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@+id/tvImage"
        android:background="@android:color/holo_orange_dark"
        android:gravity="center"
        android:text="B"
        android:elevation="-12dp"/>

    <Switch
        android:id="@+id/tvSwitch"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvA"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="59dp"
        android:background="#6B4BA5"
        android:textColor="@color/white"
        android:text="Switch"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 Traveller"
        android:layout_below="@+id/tvSwitch"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="59dp" />


</RelativeLayout>